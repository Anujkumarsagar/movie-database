generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Movies {
  id           Int            @id @default(autoincrement())
  title        String
  release_date DateTime?
  duration     Int
  description  String?
  language     String?
  country      String?
  poster       String?        @map("poster_url")
  trailer      String?        @map("trailer_url")
  streaming    String         @map("streaming_url")
  rating       Decimal        @db.Decimal(3, 1)
  created_at   DateTime       @default(now())
  updated_at   DateTime       @updatedAt
  movie_actors movie_actors[]
  genre        movie_genre[]
  rating_rel   rating[]       @relation("MovieRatings")
  directors    directors[]    @relation("MoviesTodirectors")
  watcher      Users[]        @relation("Watchlist")
}

model Genre {
  id     Int           @id @default(autoincrement())
  name   String        @unique
  movies movie_genre[]
}

model movie_genre {
  id       Int    @id @default(autoincrement())
  movie_id Int
  genre_id Int
  Genre    Genre  @relation(fields: [genre_id], references: [id])
  Movies   Movies @relation(fields: [movie_id], references: [id])
}

model actors {
  id           Int            @id @default(autoincrement())
  first_name   String
  last_name    String
  birth_date   DateTime?
  bio          String
  movie_actors movie_actors[]
}

model movie_actors {
  id       Int    @id @default(autoincrement())
  movie_id Int
  actor_id Int
  actors   actors @relation(fields: [actor_id], references: [id])
  Movies   Movies @relation(fields: [movie_id], references: [id])
}

model directors {
  id         Int       @id @default(autoincrement())
  first_name String
  last_name  String
  birth_date DateTime?
  bio        String
  Movies     Movies[]  @relation("MoviesTodirectors")
}

model Users {
  id         Int      @id @default(autoincrement())
  username   String   @unique
  email      String   @unique
  password   String
  created_at DateTime @default(now())
  role       UserRole @default(user)
  rating     rating[] @relation("UserRatings")
  movies     Movies[] @relation("Watchlist")
}

model rating {
  id         Int      @id @default(autoincrement())
  user_id    Int
  movie_id   Int
  rating     Int
  review     String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  Movies     Movies   @relation("MovieRatings", fields: [movie_id], references: [id])
  users      Users    @relation("UserRatings", fields: [user_id], references: [id])

  @@unique([user_id, movie_id])
}

enum UserRole {
  admin
  user
}
